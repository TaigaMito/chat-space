%body
  .side-bar
    .side-bar__user-name
      .top-items
        .top-items__name
          = current_user.name
        .top-items__icons
          .top-items__icons
            .top-items__icons__btn
              = link_to new_group_path, class: "icons__btn__edit" do
                = icon('fas', 'edit')
              = link_to edit_user_path(current_user) do
                = icon('fas', 'cog')
    %ul.side-bar__group-list
      - current_user.groups.each do |group|
        %li.side-bar__group
          = link_to group_messages_path(group) do
            .side-bar__group__name
              = group.name
            .side-bar__group__message
              = group.show_last_message
